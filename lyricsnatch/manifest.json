
{
  "name": "Lyric snatcher v3",
  "version": "1.3.7.1",
  "manifest_version": 3,
  "description": "Snatch lyrics onto the clipboard v3",
  "author": "Chris",
  "background" : {
    "service_worker": "background.js"  },
  "action": {
    "default_icon": "rednote.png",
    "default_popup": "popup.html"
  },

  "permissions": [
  "scripting", 
  "activeTab",
  "clipboardWrite", 
  "declarativeContent"
  ],
"host_permissions": [
  "http://*/" ,
  "https://*/"
]

}

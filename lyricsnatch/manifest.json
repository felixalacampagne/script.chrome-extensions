{
  "name": "Lyric snatcher v2.0",
  "version": "2.0.0.1",
  "manifest_version": 3,
  "description": "Snatch lyrics onto the clipboard",
  "icons": {
    "48": "rednote.png"
  },  

  
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "https://*/*"
      ]
    }
  ],
    
  "action": {
    "default_icon": "rednote.png",
    "default_popup": "popup.html"
  },

  "permissions": [
      "scripting", 
      "activeTab", 
      "clipboardWrite"
  ]
}

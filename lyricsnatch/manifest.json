{
  "name": "Lyric snatcher v2.0",
  "version": "2.0.0.5",
  "manifest_version": 3,
  "description": "Snatch lyrics onto the clipboard",
  "icons": {
    "48": "rednote.png"
  },  

  "background": {
    "service_worker": "background.js"
  },
    
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "run_at": "document_idle"
    }
  ],
    
  "action": {
    "default_icon": "rednote.png",
    "default_popup": "popup.html",
    "default_title": "Lyric snatcher"
  },

  "permissions": [
      "scripting", 
      "activeTab", 
      "clipboardWrite",
      "tabs"
  ]
}
